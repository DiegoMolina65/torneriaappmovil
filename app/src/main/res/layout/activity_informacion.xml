<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quienesomos"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="¿Quienes"
                android:textColor="#FFFFFF"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/quienesomos"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="     Somos?"
                android:textColor="#FFFFFF"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="400dp"
                android:layout_height="222dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_image"
                android:clipToOutline="true"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imageproduct1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/temasborde"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="La Tornería Montero es un reconocido negocio privado establecido hace 25 años por Andrés Rodríguez. Con un enfoque en el servicio a la comunidad agrícola, pecuaria y general de Montero, proporciona servicios mecánicos e industriales, aprovechando el carácter productivo de la región"
                android:textColor="#EAEAEA"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:background="@drawable/bordenegro"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="Reabrimos en Noviembre de 2021, recuperando la confianza de la ciudadanía de Montero. Actualmente, aspiramos a obtener el grado de maestranza, fortaleciendo nuestra reputación como empresa industrial y expandiendo nuestros servicios en todo el Norte Integrado."
                android:textColor="#EAEAEA"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/temasborde"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="20dp"
                android:paddingBottom="10dp"
                android:text="Se distinguió por su dedicación al servicio de la comunidad, brindando trabajos garantizados, económicos y de calidad. Estos tres pilares han sido la base de su éxito. Sin embargo, recientemente tuvieron que cesar sus operaciones. A petición de clientes y amigos que confiaban en su trabajo, el ingeniero Alem Rodríguez, hijo del fundador, ha asumido la responsabilidad de la empresa."
                android:textColor="#EAEAEA"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>